<Window x:Class="SemanticLibrary.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemanticLibrary.Wpf"
        mc:Ignorable="d"
        Title="Semantic Library"
        MinHeight="450"
        MinWidth="900">

    <Grid Margin="10">
        <!-- Layout: 
             Row 0: top controls (search, buttons)
             Row 1: main grids (library / results)
             Row 2: bottom area (log / result text)
        -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top controls: spans both columns -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="0,0,0,5">

            <TextBox x:Name="SearchTextBox"
                     Width="160"
                     Margin="0,0,5,0"
                     AutomationProperties.HelpText="Search"
                     TextWrapping="Wrap"/>

            <Button x:Name="SearchButton"
                    Content="Search"
                    Width="70"
                    Margin="0,0,10,0"
                    Click="SearchButton_Click"/>

            <!-- Added Semantic Search Toggle -->
            <CheckBox x:Name="SemanticSearchCheckBox"
                      Content="Semantic Search"
                      IsChecked="True"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0" Checked="SemanticSearchCheckBox_Checked"/>

            <ProgressBar x:Name="SearchProgressBar"
                         Width="100"
                         Height="14"
                         Margin="0,0,10,0"
                         IsIndeterminate="True"
                         Visibility="Hidden"/>

            <Button x:Name="SettingsButton"
                    Content="Settings"
                    Width="75"
                    Margin="0,0,5,0"
                    Click="SettingsButton_Click"/>

            <Button x:Name="EmbedButton"
                    Content="Embed"
                    Width="75"
                    Margin="0,0,5,0"
                    Click="EmbedButton_Click"/>

            <Button x:Name="DownloadButton"
                    Content="Download"
                    Width="85"
                    Click="DownloadButton_Click"/>
        </StackPanel>

        <!-- Library grid: left middle -->
        <DataGrid x:Name="LibraryDataGrid"
                  Grid.Row="1" Grid.Column="0"
                  Margin="0,5,5,5"
                  IsReadOnly="True"
                  IsManipulationEnabled="True"
                  d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <!-- Results grid: right middle -->
        <DataGrid x:Name="ResultsDataGrid"
                  Grid.Row="1" Grid.Column="1"
                  Margin="5,5,0,5"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  SelectionChanged="ResultsDataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Score"
                                    Binding="{Binding score}"
                                    Width="1.5*"/>
                <DataGridTextColumn Header="Author"
                                    Binding="{Binding author}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Title"
                                    Binding="{Binding title}"
                                    Width="3*"/>
                <DataGridTextColumn Header="Category"
                                    Binding="{Binding category}"
                                    Width="2*"/>
                <DataGridTextColumn Header="URL"
                                    Binding="{Binding url}"
                                    Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Log: bottom left -->
        <ListBox x:Name="LogListBox"
                 Grid.Row="2" Grid.Column="0"
                 Margin="0,5,5,0"
                 d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <!-- Result text: bottom right -->
        <TextBox x:Name="ResultsTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="5,5,0,0"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>
    </Grid>
</Window>